<article class="p-[16px] min-h-[200px]">
  <div class="flex flex-col gap-4">
    <h2 class="text-2xl font-bold text-center text-gray-100 lg:text-5xl">
      Listado de superhéroes
    </h2>
    <p class="text-center text-gray-100">
      Aquí encontrarás una lista de superhéroes de todos los universos
      cinematográficos y de cómics.
    </p>
  </div>
  <div class="mt-4 mb-4 text-center">
    <input
      type="text"
      id="searchBar"
      placeholder="Buscar superhéroe..."
      class="w-full px-4 py-2 text-gray-700 bg-white border rounded-lg focus:border-blue-500 focus:outline-none focus:ring dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:focus:border-blue-500 dark:focus:ring max-w-[400px] mx-auto"
    />
  </div>
  <div
    id="superheroesList"
    class="flex flex-row gap-4 mt-16 flex-wrap justify-center"
  >
    <!-- Los superhéroes se renderizarán aquí dinámicamente -->
  </div>
  <div class="flex flex-col items-center mt-8">
    <span id="paginationText" class="text-sm text-gray-700 dark:text-gray-400">
      <!-- El texto de paginación se actualizará dinámicamente -->
    </span>
    <div class="inline-flex mt-2 xs:mt-0">
      <button
        id="anterior"
        class="flex items-center justify-center px-4 h-10 text-base font-medium text-white bg-gray-800 rounded-s hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
      >
        Anterior
      </button>
      <button
        id="siguiente"
        class="flex items-center justify-center px-4 h-10 text-base font-medium text-white bg-gray-800 border-0 border-s border-gray-700 rounded-e hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
      >
        Siguiente
      </button>
    </div>
  </div>
</article>

<script>
  // The `<script>` block you provided is importing functions `initializePagination`, `previous`, and `next` from a file located at "../../services/dataIndexHome".
  import {
    initializePagination,
    previous,
    next,
  } from "../../services/dataIndexHome";

  document.addEventListener("DOMContentLoaded", initializePagination);
  document.getElementById("anterior").addEventListener("click", previous);
  document.getElementById("siguiente").addEventListener("click", next);
</script>
