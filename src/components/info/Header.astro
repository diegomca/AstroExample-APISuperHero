---
import { urlBase } from '../../lib/utils/constants.js'
---

<header
  class="py-8 px-4 mx-auto lg:py-16 lg:px-6 flex justify-center items-center w-full bg-[url(https://c4.wallpaperflare.com/wallpaper/591/844/1024/spider-man-spider-video-games-superhero-wallpaper-preview.jpg)] bg-cover bg-no-repeat min-h-[400px] bg-center"
>
  <div class="mx-auto text-center flex flex-col gap-4">
    <h1
      class="text-5xl font-bold text-white lg:text-7xl [text-shadow:2px_2px_4px_#000000]"
    >
      Información API
    </h1>
    <button
      onclick=`location.href=${urlBase}`
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-48 mx-auto lg:w-64 lg:py-3 lg:px-6 lg:text-xl lg:rounded-lg lg:hover:bg-blue-800 lg:focus:ring-4 lg:focus:outline-none lg:focus:ring-blue-300 lg:dark:bg-blue-600 lg:dark:hover:bg-blue-700 lg:dark:focus:ring-blue-800"
    >
      <a>Listado superhéroes</a>
    </button>
  </div>
</header>
